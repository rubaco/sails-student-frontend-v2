<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Assignment</h2>
<button class="btn btn-success" id="addAssignmentButton">Add Assignment</button>
<table class="table table-striped table-bordered" id="assignmentTable" style="width:100%">
  <thead>
    <tr>
      <th>Assignment ID</th>
      <th>Student ID</th>
      <th>Assignment NBR</th>
      <th>Grade</th>
      <th>Class</th>
      <th>Edit and Delete</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof assignments != "undefined" && assignments.length > 0){ %>
    <% assignments.forEach(function(assignment){ %>
      <tr>
        <td><%= assignment.assignment_id %></td>
        <td><%= assignment.student_id %></td>
        <td><%= assignment.assignment_nbr %></td>
        <td><%= assignment.grade_id%></td>
        <td><%= assignment.class_id %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton" data-assignmentid="<%= assignment.assignment_id %>">edit</button>
          <button class="btn btn-danger" id="deleteButton" data-assignmentid="<%= assignment.assignment_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_assignments" method="POST" style="display: none;" id="deleteform">
  <input type="hidden" name="assignment_id" value="eric">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageAssignmentForm">
  <div class="form-group">
    <label for="assignment_id" class="col-sm-2 control-label">Assignment ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="assignment_id" name="assignment_id" placeholder="" required>
    </div>
  </div>

  <div class="form-group">
    <label for="student_id" class="col-sm-2 control-label">Student ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="student_id" name="student_id" placeholder="student" required>
    </div>
  </div>

  <div class="form-group">
    <label for="assignment_nbr" class="col-sm-2 control-label">Assignment</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="assignment_nbr" name="assignment_nbr" placeholder="assignment nbr" required>
    </div>
  </div>

  <div class="form-group">
    <label for="grade_id" class="col-sm-2 control-label">Grade</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="grade_id" name="grade_id" placeholder="grade id" required>
    </div>
  </div>

  <div class="form-group">
    <label for="class_id" class="col-sm-2 control-label">Class</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="class_id" name="class_id" placeholder="class" required>
    </div>
  </div>

</form>
